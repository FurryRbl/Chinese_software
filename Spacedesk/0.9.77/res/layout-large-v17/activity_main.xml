<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@id/main_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
        android:gravity="center_horizontal"
        android:id="@id/placeHolder"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="180.0dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAlignment="center" />
    <ImageView
        android:id="@id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80.0dip"
        android:src="@drawable/spacedesk_logo"
        android:layout_above="@id/placeHolder"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="onImageMainClicked"
        android:contentDescription="spacedesk_logo" />
    <ExpandableListView
        android:id="@id/listView"
        android:background="#ffd3d3d3"
        android:focusable="true"
        android:scrollbars="vertical"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:groupIndicator="@mipmap/icon_hostname"
        android:dividerHeight="5.0dip"
        android:choiceMode="singleChoice"
        android:layout_below="@id/imageView"
        android:layout_alignLeft="@id/imageView"
        android:layout_alignRight="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignStart="@id/imageView"
        android:layout_alignEnd="@id/imageView" />
    <RelativeLayout
        android:orientation="vertical"
        android:id="@id/tvCDS"
        android:background="#ffd3d3d3"
        android:layout_width="wrap_content"
        android:layout_height="61.0dip"
        android:layout_below="@id/imageView"
        android:layout_alignLeft="@id/imageView"
        android:layout_alignRight="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignStart="@id/imageView"
        android:layout_alignEnd="@id/imageView">
        <TextView
            android:textSize="14.0sp"
            android:textStyle="bold"
            android:id="@id/tvCDSDiscoveryOn"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/CDS"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
        <Button
            android:textSize="14.0sp"
            android:textStyle="bold"
            android:id="@id/buttonCDSDiscoveryOff"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/CDSButtonDiscoveryOff"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:onClick="_AddServerManuallyDialogShow" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorDiscoveryBar"
        android:layout_width="fill_parent"
        android:layout_height="65.0dip"
        android:layout_above="@id/listView"
        android:layout_alignLeft="@id/listView"
        android:layout_alignRight="@id/listView"
        android:layout_alignStart="@id/listView"
        android:layout_alignEnd="@id/listView"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@id/progressBarLevel"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:indeterminate="false"
                android:indeterminateOnly="false"
                android:animationResolution="1"
                style="?android:progressBarStyleHorizontal" />
            <ProgressBar
                android:id="@id/progressBarLevel2"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:indeterminate="false"
                android:indeterminateOnly="false"
                android:animationResolution="1"
                android:rotation="180.0"
                style="?android:progressBarStyleHorizontal" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/colorDiscoveryBar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <TextView
                    android:textSize="13.0sp"
                    android:textStyle="bold"
                    android:textColor="#ffffffff"
                    android:id="@id/tvListViewHeader"
                    android:background="@color/colorDiscoveryBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21.0dip"
                    android:layout_marginTop="5.0dip"
                    android:layout_marginBottom="5.0dip"
                    android:text="@string/hostname"
                    android:layout_marginStart="21.0dip" />
            </LinearLayout>
            <ImageView
                android:id="@id/btnHeaderInfo"
                android:background="@drawable/button"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="30.0dip"
                android:layout_marginRight="5.0dip"
                android:src="@mipmap/ic_info"
                android:layout_alignParentRight="true"
                android:onClick="onImageViewInfoClicked"
                android:contentDescription="ImageInfo"
                android:layout_marginEnd="5.0dip"
                android:layout_alignParentEnd="true" />
            <ImageView
                android:id="@id/btnHeaderAddIp"
                android:background="@drawable/button"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="30.0dip"
                android:layout_marginRight="33.0dip"
                android:src="@mipmap/ic_add"
                android:layout_alignRight="@id/btnHeaderInfo"
                android:onClick="_AddServerManuallyDialogShow"
                android:contentDescription="AddIp"
                android:layout_marginEnd="33.0dip"
                android:layout_alignEnd="@id/btnHeaderInfo" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>